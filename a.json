{
  "name": "Publish Python distribution to PyPI",
  "on": {
    "push": {
      "branches": ["main"]
    }
  },
  "jobs": {
    "build": {
      "name": "Build distribution",
      "runs-on": "ubuntu-22.04",
      "strategy": {
        "matrix": {
          "include": [
            {
              "python-version": "3.8",
              "python-version-sub": "38"
            },
            {
              "python-version": "3.9",
              "python-version-sub": "39"
            },
            {
              "python-version": "3.10",
              "python-version-sub": "310"
            }
          ]
        }
      }
    }
  }
}
